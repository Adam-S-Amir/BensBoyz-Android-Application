    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bensboyz.food.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.bensboyz.food.ui.menu.MenuFragment"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/navigation_distribution"
        android:name="com.bensboyz.food.ui.distribution.DistributionFragment"
        android:label="@string/title_distribution"
        tools:layout="@layout/fragment_distribution" />

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.bensboyz.food.ui.contact.Contact"
        android:label="@string/title_contact"
